<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysLlmConfigMapper">
    
    <resultMap type="SysLlmConfig" id="SysLlmConfigResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="provider"    column="provider"    />
        <result property="modelCode"    column="model_code"    />
        <result property="apiKey"    column="api_key"    />
        <result property="baseUrl"    column="base_url"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysLlmConfigVo">
        select id, name, provider, model_code, api_key, base_url, status, create_by, create_time, update_by, update_time, remark from sys_llm_config
    </sql>

    <select id="selectSysLlmConfigList" parameterType="SysLlmConfig" resultMap="SysLlmConfigResult">
        <include refid="selectSysLlmConfigVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="provider != null  and provider != ''"> and provider = #{provider}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysLlmConfigById" parameterType="Long" resultMap="SysLlmConfigResult">
        <include refid="selectSysLlmConfigVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSysLlmConfig" parameterType="SysLlmConfig" useGeneratedKeys="true" keyProperty="id">
        insert into sys_llm_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="provider != null">provider,</if>
            <if test="modelCode != null">model_code,</if>
            <if test="apiKey != null">api_key,</if>
            <if test="baseUrl != null">base_url,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="provider != null">#{provider},</if>
            <if test="modelCode != null">#{modelCode},</if>
            <if test="apiKey != null">#{apiKey},</if>
            <if test="baseUrl != null">#{baseUrl},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysLlmConfig" parameterType="SysLlmConfig">
        update sys_llm_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="provider != null">provider = #{provider},</if>
            <if test="modelCode != null">model_code = #{modelCode},</if>
            <if test="apiKey != null">api_key = #{apiKey},</if>
            <if test="baseUrl != null">base_url = #{baseUrl},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysLlmConfigById" parameterType="Long">
        delete from sys_llm_config where id = #{id}
    </delete>

    <delete id="deleteSysLlmConfigByIds" parameterType="String">
        delete from sys_llm_config where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
