<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysDataSourceMapper">
    
    <resultMap type="SysDataSource" id="SysDataSourceResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="type"    column="type"    />
        <result property="driverClass"    column="driver_class"    />
        <result property="host"    column="host"    />
        <result property="port"    column="port"    />
        <result property="username"    column="username"    />
        <result property="password"    column="password"    />
        <result property="dbName"    column="db_name"    />
        <result property="initialSize"    column="initial_size"    />
        <result property="maxActive"    column="max_active"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysDataSourceVo">
        select id, name, type, driver_class, host, port, username, password, db_name, initial_size, max_active, create_by, create_time, update_by, update_time, remark from sys_datasource
    </sql>

    <select id="selectSysDataSourceList" parameterType="SysDataSource" resultMap="SysDataSourceResult">
        <include refid="selectSysDataSourceVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
        </where>
    </select>
    
    <select id="selectSysDataSourceById" parameterType="Long" resultMap="SysDataSourceResult">
        <include refid="selectSysDataSourceVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSysDataSource" parameterType="SysDataSource" useGeneratedKeys="true" keyProperty="id">
        insert into sys_datasource
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="type != null">type,</if>
            <if test="driverClass != null">driver_class,</if>
            <if test="host != null">host,</if>
            <if test="port != null">port,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="dbName != null">db_name,</if>
            <if test="initialSize != null">initial_size,</if>
            <if test="maxActive != null">max_active,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="type != null">#{type},</if>
            <if test="driverClass != null">#{driverClass},</if>
            <if test="host != null">#{host},</if>
            <if test="port != null">#{port},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="dbName != null">#{dbName},</if>
            <if test="initialSize != null">#{initialSize},</if>
            <if test="maxActive != null">#{maxActive},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysDataSource" parameterType="SysDataSource">
        update sys_datasource
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="type != null">type = #{type},</if>
            <if test="driverClass != null">driver_class = #{driverClass},</if>
            <if test="host != null">host = #{host},</if>
            <if test="port != null">port = #{port},</if>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="dbName != null">db_name = #{dbName},</if>
            <if test="initialSize != null">initial_size = #{initialSize},</if>
            <if test="maxActive != null">max_active = #{maxActive},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysDataSourceById" parameterType="Long">
        delete from sys_datasource where id = #{id}
    </delete>

    <delete id="deleteSysDataSourceByIds" parameterType="String">
        delete from sys_datasource where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
